<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--this is the shadow color-->
    <item>
    <shape>
        <solid
            android:color="#453d4f7a"/>
        <corners
            android:radius="@dimen/_10sdp"/>
    </shape>
</item>
    <!--this is the main color-->
<item android:bottom="@dimen/_1sdp" android:right="@dimen/_1sdp"
    android:top="@dimen/_1sdp" android:left="@dimen/_1sdp">
