<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#edebee"
    android:orientation="vertical"
    tools:context=".activity.Help">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:background="@mipmap/aboutme_orange_toolbar_rectangle"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_back_help"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/aboutme_left_arrow"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/help"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"
            android:fontFamily="@font/airbnbcerealmedium"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_help_report"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:text="@string/report_prblm"
        android:paddingStart="@dimen/_20sdp"
        android:padding="@dimen/_5sdp"
        android:gravity="center_vertical"
        android:textColor="@color/light_grey"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/airbnbcerealbook"
        android:background="@mipmap/myrewards_data_bg"/>

</LinearLayout>
</layout>