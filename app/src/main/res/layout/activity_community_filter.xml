<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Community_filter">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#edebee"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:background="@mipmap/communiity_filter_toolbar_rectangle"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_10sdp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trending Events"
                android:textColor="@color/white"
                android:textSize="@dimen/_20ssp"
                android:fontFamily="@font/proxima_nova_reg"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/_40sdp"
                />
            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@mipmap/community_filter_search"
                android:layout_gravity="center"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@mipmap/community_filter_top_calendar"
                android:layout_gravity="center"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@mipmap/community_filter_notification"
                android:layout_gravity="center"
                android:layout_weight="1"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Request"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/proxima_nova_reg"/>
        <ImageView
            android:id="@+id/iv_community_sort_icon"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@mipmap/community_filter_filter"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_13sdp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="-5dp"
            >
           
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@mipmap/community_filter_topimage1"
                    />
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@mipmap/community_filter_top_image2"
                    android:layout_marginStart="-8dp"
                    /> 
                <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@mipmap/community_filter_topimage3"
                    android:layout_marginStart="-8dp"

                    /> 
                <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@mipmap/community_filter_topimage1"
                    android:layout_marginStart="-8dp"

                    /> 
                <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@mipmap/community_filter_top_image2"
                    android:layout_marginStart="-8dp"

                    />
            <TextView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:text="10+"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/_7ssp"
                android:background="@mipmap/ellipse_2"
                android:fontFamily="@font/airbnbcerealmedium"
                android:layout_gravity="center"
                android:layout_marginStart="-8dp"/>
        </LinearLayout>
        
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_340sdp"
        android:src="@mipmap/community_filter_big_image"

        />
        <LinearLayout
            android:layout_marginTop="-10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp"
            android:orientation="vertical"
            android:paddingStart="@dimen/_15sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:background="@mipmap/communiity_filter_toolbar_rectangle"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DJ Night"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20ssp"
                    android:layout_weight="1"
                    android:fontFamily="@font/airbnbcerealbold"/>
                <TextView
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="wrap_content"
                    android:text="Join"
                    android:layout_weight="1"
                    android:textColor="@color/orange2"
                    android:textSize="@dimen/_13ssp"
                    android:background="@drawable/tv_bg"
                    android:gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:fontFamily="@font/airbnbcerealmedium"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="@dimen/_260sdp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/community_content"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/airbnbcerealbook"
                android:layout_marginTop="@dimen/_5sdp"
                />

            <ImageView
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:src="@mipmap/community_filter_calendar2"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="-10dp"/>
            <View
                android:layout_width="@dimen/_260sdp"
                android:layout_height="0.5dp"
                android:background="#fff5f3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                >
                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@mipmap/community_filter_calendar2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sat 10Nov, 2:00 PM- 5:00 PM"
                    android:textColor="@color/white"
                    android:fontFamily="@font/airbnbcerealbook"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginStart="@dimen/_10sdp"
                    />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                >
                <LinearLayout
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/tv_bg"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_30sdp"

                    >
                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@mipmap/community_filter_heart_icon"
                        android:layout_weight="1"
                        android:padding="@dimen/_1sdp"
                        android:layout_marginStart="@dimen/_3sdp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Likes"
                        android:layout_weight="1"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/_10ssp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/myriadproregular"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/tv_bg"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_30sdp"
                    >
                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@mipmap/community_filter_comment_icon"
                        android:layout_weight="1"
                        android:padding="@dimen/_1sdp"
                        android:layout_marginStart="@dimen/_3sdp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comments"
                        android:layout_weight="1"
                        android:textColor="@color/orange2"
                        android:textSize="@dimen/_10ssp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/myriadproregular"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/tv_bg"
                    android:padding="@dimen/_5sdp"
                      android:layout_gravity="center"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@mipmap/community_filter_share_icon"
                        android:layout_weight="1"
                        android:padding="@dimen/_1sdp"
                        android:layout_marginStart="@dimen/_3sdp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share"
                        android:layout_weight="1"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/_10ssp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/myriadproregular"
                        />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_220sdp"
            android:orientation="vertical"
            android:background="@mipmap/mid_content_white_rectangle"
            android:padding="@dimen/_10sdp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recommended for you"
                android:textSize="@dimen/_19ssp"
                android:textColor="@color/orangish"
                android:fontFamily="@font/airbnbcerealmedium"/>
            <View
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_1sdp"
                android:background="#26000000"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/community_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/community_data"
                android:padding="@dimen/_2sdp"
                />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
</layout>