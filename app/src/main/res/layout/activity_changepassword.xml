<?xml version="1.0" encoding="utf-8"?>
<layout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#edebee"
    android:orientation="vertical"
    tools:context=".activity.Changepassword">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:background="@mipmap/aboutme_orange_toolbar_rectangle"
            android:orientation="horizontal"
           >

            <ImageView
                android:id="@+id/iv_back_change_password"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/aboutme_left_arrow"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/change_password"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp"
                android:fontFamily="@font/airbnbcerealmedium"
                />
        </LinearLayout>



            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@mipmap/mid_content_white_rectangle"
                android:paddingTop="@dimen/_50sdp"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:layout_weight="1"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/old_password"
                    android:fontFamily="@font/myriadproregular"
                    />
                <EditText
                    android:id="@+id/et_oldPasword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:hint="***********"
                    android:textColorHint="#80000000"
                    android:inputType="textPassword"
                    android:fontFamily="@font/myriadproregular"

                    />
                <TextView
                    android:id="@+id/tv_oldpassworderror"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:fontFamily="@font/myriadproregular"

                    android:textColor="@color/rusty_red"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/new_password"
                    android:fontFamily="@font/myriadproregular"

                    />
                <EditText
                    android:id="@+id/et_newPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/myriadproregular"

                    android:singleLine="true"
                    android:maxLength="20"
                    android:hint="***********"
                    android:textColorHint="#80000000"
                    android:inputType="textPassword"
                    />
                <TextView
                    android:id="@+id/tv_newpassworderror"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/myriadproregular"

                    android:visibility="invisible"
                    android:textColor="@color/rusty_red"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cnf_password"
                    android:fontFamily="@font/myriadproregular"

                    />
                <EditText
                    android:id="@+id/et_confirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:fontFamily="@font/myriadproregular"

                    android:hint="***********"
                    android:textColorHint="#80000000"
                    android:inputType="textPassword"
                    />
                <TextView
                    android:id="@+id/tv_confirmpassworderror"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/myriadproregular"

                    android:visibility="invisible"
                    android:textColor="@color/rusty_red"/>


        </LinearLayout>


        <Button
            android:onClick="update"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_65sdp"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:text="@string/update"
            android:background="@mipmap/filter_rectangle_bottom_orange"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:fontFamily="@font/airbnbcerealbold"


            />


</LinearLayout>
</layout>