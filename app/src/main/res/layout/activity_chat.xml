<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#edebee"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.Chat">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:background="@mipmap/aboutme_orange_toolbar_rectangle"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_30sdp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/chat"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"
            android:fontFamily="@font/airbnbcerealmedium"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/_100sdp"
            />
        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@mipmap/community_filter_search"
            android:layout_gravity="center_vertical|end"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@mipmap/community_filter_notification"
            android:layout_gravity="center_vertical|end"
            android:layout_weight="1"/>

    </LinearLayout>
    <FrameLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chats_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_2sdp"
        tools:listitem="@layout/chat_data"
        />
        <ImageView
            android:layout_margin="@dimen/_8sdp"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@mipmap/chat_comment"

            android:layout_gravity="bottom|right"/>
    </FrameLayout>

    <LinearLayout
        android:background="@mipmap/filter_rectangle_bottom_orange"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_65sdp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:padding="@dimen/_8sdp"
        >
        <LinearLayout
            android:id="@+id/layout_telescope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_telescope"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_50sdp"
                android:text="Discover"
                android:textColor="@color/orangish"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/proxima_nova_reg"
                android:gravity="center"
                android:visibility="gone"
                android:background="@mipmap/chat_white_telescope"
                />
            <ImageView
                android:id="@+id/image_telescope"
                android:padding="@dimen/_5sdp"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@mipmap/chat_grey_telescope"/>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_chat"
         android:layout_marginStart="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_chat"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:text="Chat"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_20sdp"
                    android:background="@mipmap/chat_icon_white"
                    android:textColor="@color/orangish"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/proxima_nova_reg"
                    android:visibility="visible"
                    />
                <ImageView
                    android:id="@+id/image_chat"
                    android:padding="@dimen/_5sdp"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:visibility="gone"
                    android:src="@drawable/chat_icon_state"/>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_home"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_home"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_50sdp"
                android:text="Home"
                android:gravity="center"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:background="@mipmap/chat_home_white"
                android:textColor="@color/orangish"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/proxima_nova_reg"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/image_home"
                android:padding="@dimen/_5sdp"
                android:layout_width="@dimen/_30sdp"
                android:visibility="visible"
                android:layout_height="@dimen/_30sdp"
                android:src="@mipmap/chat_home_grey"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_friends"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:textColor="@color/orangish"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/proxima_nova_reg"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/image_friends"
                android:padding="@dimen/_5sdp"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@mipmap/chat_friends_grey"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layouy_discover"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_discover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:textColor="@color/orangish"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/proxima_nova_reg"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/image_discover"
                android:padding="@dimen/_5sdp"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@mipmap/chat_shap_grey"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</layout>