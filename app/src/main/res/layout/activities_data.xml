<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60sdp"
    android:background="@mipmap/myrewards_data_bg"
    android:layout_marginBottom="@dimen/_5sdp"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:layout_gravity="center_vertical"
        >
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/iv_activities_mainimg"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@mipmap/muted_account_img1"
            android:layout_marginStart="@dimen/_5sdp"
            app:civ_border="true"
            app:civ_border_width="@dimen/_1sdp"
            app:civ_border_color="@color/image_boder"
            android:layout_gravity="center_vertical"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_activities_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2sdp"
                android:text="Jasmine Ellison"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/airbnbcerealbook"
                />
                <TextView
                    android:id="@+id/tv_activities_subtitle"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John doe comment on your feed"
                    android:textSize="@dimen/_7ssp"
                    android:fontFamily="@font/airbnbcerealbook"
                    android:textColor="#aeaeae"/>


            </LinearLayout>

                <TextView
                    android:id="@+id/tv_activities_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1:30 PM"
                    android:textSize="@dimen/_7ssp"
                    android:fontFamily="@font/airbnbcerealbook"
                    android:textColor="#aeaeae"

                    />


        </LinearLayout>



            <ImageView
                android:id="@+id/iv_activities_right_image"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@mipmap/activities_right_image"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/_6sdp"

                />


    </LinearLayout>
</LinearLayout>